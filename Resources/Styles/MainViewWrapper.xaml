<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MainViewWrapper"
           TargetType="Border">

        <Setter Property="Background" Value="{DynamicResource MainViewWrapperBrush}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                     Color="Black" 
                     BlurRadius="15" 
                     Opacity="1" 
                     ShadowDepth="0"
                     Direction="0"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>