<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:misc="clr-namespace:YetAnotherMessenger.Misc">

    <Style x:Key="ViewWrapper"
           TargetType="Border">
        
        <Setter Property="Background" Value="{StaticResource ViewWrapperBrush}"/>
        <Setter Property="CornerRadius" Value="20"/>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                     Color="{StaticResource ViewWrapperDropShadowEffectColor}" 
                     BlurRadius="15" 
                     ShadowDepth="0"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>