<Application x:Class="YetAnotherMessenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YetAnotherMessenger"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ColorSchemes\WindowColorScheme.xaml"/>
                <ResourceDictionary Source="/Resources/ColorSchemes\MainViewColorScheme.xaml"/>
                <ResourceDictionary Source="/Resources/ColorSchemes\MenuColorScheme.xaml"/>
                <ResourceDictionary Source="/Resources/ColorSchemes\ChatColorScheme.xaml"/>
                
                <ResourceDictionary Source="/Resources/Styles/HeaderButton.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/MainViewWrapper.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/Button.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/RadioButton.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/ScrollBar.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/ContextMenu.xaml"/>

                <ResourceDictionary Source="Resources\lang.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
