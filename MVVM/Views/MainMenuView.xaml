<rxui:ReactiveUserControl x:Class="YetAnotherMessenger.MVVM.Views.MainMenuView"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:YetAnotherMessenger.MVVM.Views"
                                xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
                                xmlns:rxui="http://reactiveui.net"
                                x:TypeArguments="vm:MainMenuViewModel"
                                xmlns:yam="clr-namespace:YetAnotherMessenger"
                                xmlns:vm="clr-namespace:YetAnotherMessenger.MVVM.ViewModels"
                                xmlns:misc="clr-namespace:YetAnotherMessenger.Misc"
                                mc:Ignorable="d" 
                                d:DesignHeight="600" d:DesignWidth="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Border
            Grid.Row="0"
            CornerRadius="20"
            Margin="5"
            Background="{StaticResource MainMenuBackgroundBrush}">

            <StackPanel>
                <Button x:Name="CloseMainMenuButton"
                    Content="{Binding Geometry, Source={StaticResource ArrowBackIcon}}"
                    Width="35"
                    Height="35"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SvgResponsiveButton}"
                    Margin="5, 0, 0, 0"/>
                
                <Border>
                    
                    <StackPanel
                        Orientation="Vertical">

                        <local:UserPreviewView
                            IsEnabled="False"/>

                        <Button x:Name="NewAccountButton"
                            Height="50"
                            Style="{StaticResource CommonButton}"
                            Padding="10, 0, 0, 0">

                            <Button.Content>
                                <StackPanel
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">

                                    <Path
                                        Data="{Binding Geometry, Source={StaticResource AccountAddIcon}}"
                                        Fill="{StaticResource AccentBrush2}"
                                        VerticalAlignment="Center"
                                        Margin="0, 0, 20, 0">

                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="-1"/>
                                                <TranslateTransform X="25"/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>

                                    <TextBlock
                                        Text="New Account"
                                        Foreground="{StaticResource MainMenuButtonForegroundBrush}"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            CornerRadius="20"
            Margin="5"
            Background="{StaticResource MainMenuBackgroundBrush}">

            <StackPanel
                Orientation="Vertical">

                <Button
                    Height="50"
                    Style="{StaticResource CommonButton}"
                    Padding="10, 0, 0, 0">

                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                            <Path
                                Data="{Binding Geometry, Source={StaticResource GroupAddIcon}}"
                                Fill="{StaticResource AccentBrush2}"
                                VerticalAlignment="Center"
                                Margin="0, 0, 20, 0"/>

                            <TextBlock
                                Text="New Group"
                                Foreground="{StaticResource MainMenuButtonForegroundBrush}"
                                FontSize="14"
                                FontWeight="Medium"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    Height="50"
                    Style="{StaticResource CommonButton}"
                    Padding="10, 0, 0, 0">

                    <Button.Content>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                            <Path
                                Data="{Binding Geometry, Source={StaticResource SettingsIcon}}"
                                Fill="{StaticResource AccentBrush2}"
                                VerticalAlignment="Center"
                                Margin="0, 0, 20, 0"/>

                            <TextBlock
                                Text="Settings"
                                Foreground="{StaticResource MainMenuButtonForegroundBrush}"
                                FontSize="14"
                                FontWeight="Medium"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                
                <Grid>
                    <Button
                        Height="50"
                        Style="{StaticResource CommonButton}"
                        Padding="10, 0, 10, 0">

                        <Button.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Path
                                    Grid.Column="0"
                                    Data="{Binding Geometry, Source={StaticResource DarkModeIcon}}"
                                    Fill="{StaticResource AccentBrush2}"
                                    VerticalAlignment="Center"
                                    Margin="0, 0, 20, 0"/>

                                <TextBlock
                                    Grid.Column="1"
                                    Text="Dark Mode"
                                    Foreground="{StaticResource MainMenuButtonForegroundBrush}"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    VerticalAlignment="Center"/>

                                <ToggleButton
                                    Grid.Column="2"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource ToggleSwitch}"/>
                            </Grid>
                        </Button.Content>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</rxui:ReactiveUserControl>
